<h2 align="center">Welcome to MessageMe-<i>ChatApp</i></h2>

<div class="login-form">
    <%= form_for(:session, html: {role: "form"}, url: login_path) do |f|%>
		<div class="avatar"><%= image_tag("login.ico", class: "change")%></div>
    	<h4 class="modal-title">Login to Your Account</h4>
        <div class="form-group">
            <%= f.text_field :username, class: "form-control chn", placeholder: "Username"%>
        </div>
        <div class="form-group">
            <%= f.password_field :password, class: "form-control chn", placeholder: "Password"%>
        </div>
        <div class="form-group small clearfix">
            <label class="checkbox-inline"><input type="checkbox"> Remember me</label>
        </div>
        <%= f.button "Login", class: "btn btn-primary btn-block btn-lg"%>
    <% end %>
    <div class="text-center"><h5>Don't have an account? <%= link_to "Sign Up", signup_path %></h5></div>
</div>
<%= stylesheet_link_tag "login" %>
